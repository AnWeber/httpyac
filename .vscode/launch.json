{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "debug",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "cwd": "${fileDirname}",
      "console": "integratedTerminal",
      "program": "${workspaceFolder}/bin/httpyac.js",
      "args": [
        "send",
        "${file}",
        "--all",
        "-o",
        "short"
      ],
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "debug files",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "cwd": "${workspaceFolder:httpyac.github.io}/examples/",
      "console": "integratedTerminal",
      "program": "${workspaceFolder}/bin/httpyac.js",
      "args": [
        "send",
        "**/*.http",
        "-o",
        "short"
      ],
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ]
    }
  ]
}