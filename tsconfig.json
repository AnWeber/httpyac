{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"outDir": "dist",
		"lib": [
			"es2019"
		],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
	  "noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"experimentalDecorators": true,
		"declaration": true,
		"esModuleInterop": true
	},
	"include": ["**/*.ts"],
	"exclude": [
		"node_modules", "dist", "buildSrc"
	]
}
