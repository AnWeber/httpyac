{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2020",
		"outDir": "dist",
		"lib": [
			"es2020",
			"DOM"
		],
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"./src/*"
			]
		},
		"sourceMap": true,
		"strict": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"noUnusedLocals": true,
		"skipLibCheck": true,
		"noUnusedParameters": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true
	},
	"include": [
		"src/**/*.ts",
		"tsconfig.build.json"
	],
	"exclude": [
		"src/**/*.spec.ts",
		"node_modules",
		"dist",
		"buildSrc"
	]
}